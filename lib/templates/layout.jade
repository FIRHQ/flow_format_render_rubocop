doctype html
html(lang='en')
  head
    title flow.ci - eslint format renderer
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/4.0.0/normalize.min.css')
    link(rel='stylesheet', href='https://fonts.useso.com/css?family=Open+Sans:400,300,600')
    style.
      body{
        font-family: 'Open Sans';
      }
  body
    h1 Format Renderer for Rubocop
    
    table(border='1')
      tr
        td Offense count
        td= summary.offense_count
      tr
        td Target file count
        td= summary.target_file_count
      tr
        td Inspected file count
        td= summary.inspected_file_count

    ul
      each file in files
        li= file.path
